### Fern's Aliases ###
### Last updated: 06/01/2021 ###

# directory navigation aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# safely rm
alias rm='rm -I --preserve-root'

# update all in one command
alias update='sudo apt-get update && sudo apt-get upgrade'

# ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
